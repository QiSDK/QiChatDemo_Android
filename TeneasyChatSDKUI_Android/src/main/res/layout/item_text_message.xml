<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/chatBody"
    android:layout_margin="5dp"
    >
    <TextView
        android:id="@+id/tv_left_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:textSize="10sp"
        android:textColor="@color/grayc4c4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="21:57:52"
        />
    <LinearLayout
        android:id="@+id/ly_left_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_left_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_receive_status"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_chainStyle="packed"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_kefu_image"
            android:layout_width="38dp"
            android:src="@drawable/group_25"
            app:civ_border_color="#80ffffff"
            android:layout_height="38dp" />
        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:elevation="2dp"
            android:layout_marginEnd="-3dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/polygon_2"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            >
        </ImageView>

    <LinearLayout
        android:id="@+id/ll_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="fill_horizontal"
        android:background="@drawable/rounded_corner"
        android:layout_marginBottom="3dp"
        android:orientation="vertical"
        >
        <com.teneasy.chatuisdk.ui.utils.emoji.EmoticonTextView
            android:id="@+id/tv_left_msg"
            android:elevation="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:layout_gravity="start"
            android:gravity="start"
            android:padding="10dp"
            android:textColor="@color/ps_color_4e4d4e"
            android:text="这是怎么一回事"
            android:textSize="14sp"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/rl_left_Imagecontainer"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp_10"
            >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/iv_left_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:padding="3dp"
                android:gravity="right"
                android:adjustViewBounds="true"
                />

            <ImageView
                android:id="@+id/iv_play"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerInParent="true"
                android:src="@drawable/circel_play"
                ></ImageView>
        </RelativeLayout>
        <LinearLayout
            android:background="@drawable/rounded_corner"
            android:elevation="2dp"
            android:id="@+id/ll_reply_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:padding="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:textColor="@color/ps_color_4e4d4e"
                android:text="回复："
                ></TextView>
            <ImageView
                android:id="@+id/iv_left_reply_image"
                android:elevation="2dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/image_default"
                android:visibility="visible"
                />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.teneasy.chatuisdk.ui.utils.emoji.EmoticonTextView
                    android:id="@+id/tv_left_reply_origin"
                    android:elevation="2dp"
                    android:textColor="@color/ps_color_4e4d4e"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:lines="1"
                    android:text="文大打了仨风急浪大售房 的  的洒哥哥 饿饿件.jpg"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:gravity="start"
                    android:padding="3dp"
                    android:textSize="14sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_left_reply_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200.12KB"
                    ></TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_right_time"
        android:textSize="10sp"
        android:textColor="@color/grayc4c4"
        android:layout_marginEnd="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="visible"
        android:text="21:57:52"
        />
    <LinearLayout
        android:id="@+id/ly_right_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_10"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_right_time"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <LinearLayout
            android:id="@+id/ll_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_blue"
            android:gravity="fill_horizontal"
            android:orientation="vertical"
            >
            <com.teneasy.chatuisdk.ui.utils.emoji.EmoticonTextView
                android:id="@+id/tv_right_msg"
                android:elevation="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="200dp"
                android:layout_gravity="end"
                android:gravity="start"
                android:textColor="@color/white"
                android:padding="10dp"
                android:layout_marginStart="@dimen/dp_10"
                android:text="这是右边的消息"
                android:textSize="14sp"
                android:visibility="visible" />
            <ImageView
                android:id="@+id/iv_send_status"
                android:src="@drawable/h5_fszhong"
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:layout_height="wrap_content"
                android:visibility="visible"
                />

            <RelativeLayout
                android:id="@+id/rlImagecontainer"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_width="250dp"
                android:layout_height="200dp">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/iv_right_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    android:padding="4dp"
                    android:adjustViewBounds="true"
                    />
                <ImageView
                    android:id="@+id/iv__right_play"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/circel_play"
                    ></ImageView>
            </RelativeLayout>
            <LinearLayout
                android:background="@drawable/rounded_corner_blue"
                android:elevation="2dp"
                android:id="@+id/ll_reply_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="200dp"
                android:padding="5dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/white"
                    android:text="回复："
                    ></TextView>
                <ImageView
                    android:id="@+id/iv_right_reply_image"
                    android:elevation="2dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/image_default"
                    android:visibility="visible"
                    />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <com.teneasy.chatuisdk.ui.utils.emoji.EmoticonTextView
                    android:id="@+id/tv_right_reply_origin"
                    android:elevation="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="150dp"
                    android:lines="1"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:textColor="@color/white"
                    android:gravity="start"
                    android:ellipsize="middle"
                    android:padding="3dp"
                    android:text="文大打了仨风急浪大售房 的  的洒哥哥 饿饿件.jpg"
                    android:textSize="14sp"
                    android:visibility="visible" />
                    <TextView
                        android:id="@+id/tv_right_reply_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="200.12KB"
                        ></TextView>
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_right_chatarrow"
                android:layout_width="8dp"
                android:layout_height="11dp"
                android:elevation="2dp"
                android:background="@drawable/polygon_1"
                android:layout_marginTop="5dp"
                android:layout_marginStart="-1dp"
                android:layout_marginEnd="10dp"
                >
            </ImageView>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_right_image"
                android:layout_width="38dp"
                android:src="@drawable/group_25"
                app:civ_border_color="#80ffffff"
                android:layout_height="38dp" />
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_receive_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:src="@drawable/h5_fszhong"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ly_left_content"
        app:layout_constraintTop_toTopOf="@+id/ly_left_content"
        app:layout_constraintBottom_toBottomOf="@+id/ly_left_content"
        />
</androidx.constraintlayout.widget.ConstraintLayout>